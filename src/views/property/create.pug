extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content
    .py-4
        h2(class="text-center text-2xl font-extrabold text-chocolateColor")= page
        .bg-white.shadow-lg.py-8.px-4.rounded-md.mx-auto.max-w-4xl.my-10(class="md:px-10")
            form.space-y-8(action='./create/', method="POST")
                h3.text-lg.leading-6.font-bold.text-orangeColor General Information of Property
                p Please carefully fill in information about the property you want to sell.
                div
                    label.uppercase.text-gray-500.block.text-sm.mb-3.font-bold(for="title") Title of Announcement
                    input(type="text", name="title", placeholder="Ex. House with two floors", id="title", class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                div
                    label.uppercase.text-gray-500.block.text-sm.mb-3.font-bold(for="description") Description of Announcement
                    textarea(name="description", rows="10", placeholder="Detailed specification about the property", id="description", class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                div(class="md:flex md:gap-4")
                    div(class="md:w-1/2")
                        label(for="category", class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Category
                        select#category(name="category", class="w-full px-3 py-2 border border-melon rounded-md")
                            option(value="", selected disabled) --SELECT CATEGORY--
                            each category in categories
                                option(value=category.id)= category.name

                    div(class="md:w-1/2")
                        label(for="priceRange", class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Price Range
                        select#priceRange(name="priceRange", class="w-full px-3 py-2 border border-melon rounded-md")
                            option(value="", selected disabled) -- SELECT PRICE --
                            each price in prices
                                option(value=price.id)= price.name

                div(class="md:flex md:gap-4")
                    div(class="md:w-1/3")
                        label(for="nRooms", class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Number of Rooms
                        select#nRooms(name="nRooms", class="w-full px-3 py-2 border border-melon rounded-md")
                            option(value="", selected disabled) -- SELECT # --
                            - let n=1;
                            while n<=10
                                option(value=n)= n++

                    div(class="md:w-1/3")
                        label(for="nWc", class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Numer of bathrooms
                        select#nWc(name="nWc", class="w-full px-3 py-2 border border-melon rounded-md")
                            option(value="", selected disabled) -- SELECT # --
                            - let m=1;
                            while m<=5
                                option(value=m)= m++

                    div(class="md:w-1/3")
                        label(for="nParkinlots", class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Number of parking
                        select#nParkinlots(name="nParkinlots", class="w-full px-3 py-2 border border-melon rounded-md")
                            option(value="", selected disabled) -- SELECT # --
                            - let o=1;
                            while o<=5
                                option(value=o)= o++

                div.border-gray-200.border-t.py-5.space-y-4
                    h3.text-lg.leading-6.font-medium.text-gray-900 Location
                    p.text-gray-900 Locate the property on the map
                    #map.h-96

                    div
                        p.street= data.street ? data.street : ''

                    input(type="hidden", name="street", id="street", value= data.street ? data.street : '')
                    input(type="hidden", name="lat", id="lat", value= data.lat ? data.lat : '')
                    input(type="hidden", name="lng", id="lng", value= data.lng ? data.lng : '')

                input(type="submit", class="w-full py-3 bg-blue-600 hover:bg-blue-800 hover:scale-105 active:scale-95 rounded-md text-white font-bold uppercase cursor-pointer", value="Add Image")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/map.js")
