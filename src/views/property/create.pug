extends ../layout/index

block content
    .py-4
        h2(class="text-center text-2xl font-extrabold text-chocolateColor")= page
        .bg-white.shadow-lg.py-8.px-4.rounded-md.mx-auto.max-w-4xl.my-10(class="md:px-10")
            form.space-y-8
                .space-y-8
                    h3.text-lg.leading-6.font-bold.text-orangeColor General Information of Property 
                    p Please carefully provide information about the specific details of the property that you want to sell.
                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/2")
                            label(for="category" class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Category
                            select#category.w-full.px-3.py-2.border.border-melon.rounded-md
                                option(value="" selected disabled) -- SELECT CATEGORY ---
                                each category in categories 
                                 option(value=category.id)= category.name 
                        div(class="md:w-1/2")
                            label(for="price" class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Price range
                            select#price.w-full.px-3.py-2.border.border-melon.rounded-md
                                option(value="" selected disabled) -- SELECT PRICE ---
                                each price in prices 
                                 option(value=price.id)= price.name
                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/3")
                            label(for="nRooms" class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Number of Rooms 
                            select#nRooms.w-full.px-3.py-2.border.border-melon.rounded-md
                                option(value="" selected disabled) -- SELECT # ---
                                - let n=1;
                                while n<=10
                                    option(value=n) #{n++}
                        div(class="md:w-1/3")
                            label(for="nBathrooms" class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Number of Bathrooms
                            select#nBathrooms.w-full.px-3.py-2.border.border-melon.rounded-md
                                option(value="" selected disabled) -- SELECT # ---
                                - let m=1;
                                while m<=5
                                    option(value=m) #{m++}
                        div(class="md:w-1/3")
                            label(for="nParking" class="block text-sm uppercase text-chocolateColor mb-3 font-bold") Number of Parking
                            select#nParking.w-full.px-3.py-2.border.border-melon.rounded-md
                                option(value="" selected disabled) -- SELECT # ---
                                - let o=1;
                                while o<=5
                                    option(value=o) #{o++}
                    .block-gray.border-t.py-5.space-y-5
                     h3.text-lg.leading-6.font-medium.text-gray-900 Ubication
                     p.text-gray-600 Property location on the map
                     #map-container
                         #map.h-96 
                          div
                            input#street(type="hidden" name="street")
                            input#lat(type="hidden" name="lat")
                            input#lng(type="hidden" name="lng")
                    button(class="w-3/6 mt-5 mx-auto rounded-full bg-blue-600 hover:bg-reislin-black/80 hover:bg-custom4 text-white font-bold py-3 cursor-pointer hover:scale-105 active:scale-95" type="submit" value="Create") Save Property
block scripts 
  script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
  script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
  script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
  script(src="/js/map.js")

