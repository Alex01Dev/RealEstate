extends ../layout/index

block content  
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center(style="color: #DD6E42;") Real 
           span.font-normal State 
        h2.text-center.text-2xl.font-extrabold= pagina

        div.mt-8.mx-auto.max-w-md
         .bg-white.py-8.px-4.shadow.rounded-2xl(style="background-color: #E8DAB2;")
            form(action=`/login/recovery` method="POST" noValidate).space-y-5 
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email Register 
                  input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your Email" type="email" name="email")
               div
                  input(class="w-full bg-blue-400 text-white font-bold py-3 cursor-pointer rounded-md transition-all ease-in-out duration-300 transform hover:scale-95 hover:bg-blue-600" type="submit" value="Send Instructions")
               div.flex.items-center.justify-between
                 a.text-gray-500.text-xs(href="./register", class="hover:text-gray-700 hover:underline") Don't have an account? Create One
                 a.text-gray-500.text-xs(href="/login", class="hover:text-gray-700 hover:underline") Do you hava an account? Login